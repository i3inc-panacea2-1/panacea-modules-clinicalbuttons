<UserControl
    x:Class="Panacea.Modules.ClinicalButtons.Views.ClinicalButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Modules.ClinicalButtons.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pcontrols="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <pcontrols:ImageButton
        Command="{Binding OpenCommand}"
        Image="{Binding ImgUrl}"
        Text="{Binding Name}"
        TextVisibility="Visible" />
</UserControl>
